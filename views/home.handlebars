<div class="container mt-5">
  <h1 class="mb-4">Agenda de Contatos</h1>
  <a href="/addContato"><button class="btn btn-sm btn-info mr-2">Adicionar Contato</button></a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Sobrenome</th>
        <th scope="col">E-mail</th>
        <th scope="col">Telefone</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody id="contactsTableBody">
      {{#each contatos}}
      <tr>
        <td>{{nome}}</td>
        <td>{{sobrenome}}</td>
        <td>{{email}}</td>
        <td>{{telefone}}</td>
        <td>
        <button class="btn btn-sm btn-info mr-2">Editar</button>
        <form id="excluir" action="/delContato/{{id}}" method="GET">
           <button type="submit" class="btn btn-sm btn-danger mr-2">Excluir</button>
        </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelector('#excluir button[type="submit"]').addEventListener('click', function(event) {
            event.preventDefault();
            Swal.fire({
                title: "Você tem certeza disso?",
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: "Sim",
                denyButtonText: `Não`,
                animation: true
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire("Sucesso ao excluir contato", "", "success").then(function(){
                          document.querySelector('#excluir').submit();
                    })
                } else if (result.isDenied) {
                    Swal.fire("Alterações não realizadas", "", "info");
                }
            });
        });
    });
</script>